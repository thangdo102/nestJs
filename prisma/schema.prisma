generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String  @unique
  hash  String?

  firstName String?
  lastName  String?
  bookmarks Bookmark[]

  @@map("users") //đổi tên bảng trong database
}

model Bookmark {
  id        Int      @id @default(autoincrement())
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  title       String
  description String?
  link        String

  //một user sẽ có nhiều bookmarks, một bookmark thì chỉ thuộc về 1 user
  userId Int
  user   User @relation(fields: [userId], references: [id])

  @@map("bookmarks")
}
