generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String  @unique
  hash  String?

  firstName String?
  lastName  String?
  Recipe    Recipe[]

  @@map("users") //đổi tên bảng trong database
}

model Recipe {
  id          Int      @id @default(autoincrement())
  createAt    DateTime @default(now())
  updatedAt   DateTime @updatedAt
  recipe      String
  slug        String
  image       String
  ingredients String

  userId Int
  User   User @relation(fields: [userId], references: [id])

  @@map("recipes")
}

